{
  "compilerOptions": {
    /* ===== Environment (Browser + React) ===== */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    /* ===== TypeScript Behavior ===== */
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,

    /* ===== JS/TS Compatibility ===== */
    "allowJs": true,        // allow existing .js/.jsx files
    "checkJs": false,       // donâ€™t type-check JS files yet

    /* ===== Vite Environment Typings ===== */
    "types": ["vite/client"],

    /* ===== Output Control ===== */
    "noEmit": true          // Vite handles build output
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
